[pull]
    ff = only
[credential]
    helper = /usr/lib/git-core/git-credential-libsecret
[safe]
    directory = /etc
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[url "ssh://git@github.com/"]
    pushInsteadOf = https://github.com/
