[branch]
    autosetuprebase = always
[color]
    ui = true
[color "branch"]
    current = green reverse
    local = green
    remote = yellow
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "status"]
    added = green
    changed = yellow
    untracked = blue
[core]
    autocrlf = input
    excludesfile = ~/.config/git/excludes
    pager = less --tabs=4 -RFX
    untrackedCache = true
[interactive]
    diffFilter = "/usr/share/git/diff-highlight/diff-highlight"
[merge]
    tool = meld
[mergetool]
    keepBackup = false
    prompt = false
[push]
    default = current
[rebase]
    autosquash = true
    autostash = true
