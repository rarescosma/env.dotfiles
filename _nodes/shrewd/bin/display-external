#!/usr/bin/env bash

source "${HOME}/bin/wm"

xrandr --output DP1 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
  --output eDP1 --off \
  --output VIRTUAL1 --off  \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off

dpi::terminal 10
dpi::i3 8
dpi::gtk 10
dpi::idea 16 14
dpi::x 110
dpi::rofi 12

keyboard::map
keyboard::rate
