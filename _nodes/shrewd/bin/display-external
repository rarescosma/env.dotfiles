#!/bin/bash

source "${HOME}/bin/wm"

xrandr --output eDP1 --off \
  --output VIRTUAL1 --off  \
  --output DP1 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off

dpi::terminal 12
dpi::i3 8
dpi::gtk 8
dpi::idea 18 16
dpi::x 110
dpi::rofi 12

"${HOME}/.i3/wallpaper.sh"
