#!/usr/bin/env bash

source "${HOME}/bin/wm"

xrandr --output DP1 --mode 1920x1080 --pos 0x0 --rotate normal \
  --output eDP1 --primary --mode 3200x1800 --pos 0x1080 --rotate normal \
  --output VIRTUAL1 --off  \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off

keyboard::setup

${HOME}/.i3/wallpaper.sh

