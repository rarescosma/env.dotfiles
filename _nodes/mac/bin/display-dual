#!/usr/bin/env bash

# shellcheck disable=SC1090
source "${HOME}/bin/wm"

EXTERNAL="DP1"

xrandr --output eDP1 --primary --mode 2880x1800 --pos 3440x0 --rotate normal \
  --output ${EXTERNAL} --mode 3440x1440 --pos 0x0 --rotate normal \
  --output VIRTUAL1 --off \
  --output DP1 --off \
  --output HDMI3 --off \
  --output HDMI2 --off \
  --output HDMI1 --off

dpi::terminal 10
dpi::i3 7
dpi::gtk 9
dpi::idea 18 15

keyboard::setup
