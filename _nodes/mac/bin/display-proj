#!/usr/bin/env bash

# shellcheck disable=SC1090
source "${HOME}/bin/wm"

xrandr --output eDP1 --primary --mode 2880x1800 --pos 0x1080 --rotate normal \
  --output HDMI2 --mode 1920x1080 --pos 0x0 --rotate normal \
  --output HDMI3 --off \
  --output HDMI1 --off \
  --output DP1 --off \
  --output DP2 --off \
  --output DP2-8 --off \
  --output DP1-8 --off

pkill -f autolock
pkill -f redshift-gtk
lux -S1%
