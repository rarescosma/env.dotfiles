#!/usr/bin/env bash

# wm also got a trampoline, so gobble all args
cmd="$@"; shift $#
source "${HOME}/bin/wm"

xrandr --output eDP1 --primary --mode 2880x1800 --pos 0x0 --rotate normal \
  --output VIRTUAL1 --off \
  --output DP1 --off \
  --output HDMI3 --off \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off \
  --output DP2-8 --off \
  --output DP1-8 --off

dpi::terminal 10
dpi::i3 11
dpi::gtk 15
dpi::idea 27 26
dpi::x 110
dpi::rofi 18

keyboard::setup
