#!/usr/bin/env bash

# shellcheck disable=SC1090
source "${HOME}/bin/wm"

xrandr --output eDP1 --primary --mode 2880x1800 --pos 0x0 --rotate normal \
  --output VIRTUAL1 --off \
  --output DP1 --off \
  --output HDMI3 --off \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off \
  --output DP2-8 --off \
  --output DP1-8 --off

dpi::terminal 16
dpi::i3 9
dpi::gtk 9
dpi::idea 27 20

keyboard::setup
