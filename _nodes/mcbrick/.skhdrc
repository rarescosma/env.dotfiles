# modes
:: default : osascript -e 'display notification "Normal mode" with title "skhd"'
:: resize : osascript -e 'display notification "Resize mode" with title "skhd"'
shift + alt - r ; resize
resize < escape; default

# resize
resize < h : yabai -m window --resize right:-20:0 
resize < j : yabai -m window --resize right:20:0
resize < k : yabai -m window --resize left:-20:0 
resize < l : yabai -m window --resize left:20:0

# apps
ctrl - 0x32 : open -na /Applications/Alacritty.app --args -e sh -c "tmux attach -d -t base || exec tmux new -s base"
shift + ctrl - 0x32 : open -na /Applications/Alacritty.app --args --option window.decorations=full -e sh -c "tmux attach -d -t base || exec tmux new -s base"
ctrl - 0x24 : open -na /Applications/Alacritty.app
ctrl - 0x2C : open -na /Applications/Brave\ Browser.app
shift + ctrl - 0x2C : open -na /Applications/Google\ Chrome.app

# focus window
ctrl - h : yabai -m window --focus west
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east
ctrl - left  : yabai -m window --focus west
ctrl - down  : yabai -m window --focus south
ctrl - up    : yabai -m window --focus north
ctrl - right : yabai -m window --focus east

# focus space
ctrl - 1 : yabai-switch-space 1
ctrl - 2 : yabai-switch-space 2
ctrl - 3 : yabai-switch-space 3
ctrl - 4 : yabai-switch-space 4
ctrl - 5 : yabai-switch-space 5
ctrl - 6 : yabai-switch-space 6

# move window
shift + ctrl - h : yabai -m window --warp west
shift + ctrl - j : yabai -m window --warp south
shift + ctrl - k : yabai -m window --warp north
shift + ctrl - l : yabai -m window --warp east

# move window to space
shift + ctrl - 1 : yabai -m window --space 1 
shift + ctrl - 2 : yabai -m window --space 2
shift + ctrl - 3 : yabai -m window --space 3
shift + ctrl - 4 : yabai -m window --space 4
shift + ctrl - 5 : yabai -m window --space 5
shift + ctrl - 6 : yabai -m window --space 6

# destroy space
shift + ctrl - w : yabai -m space --destroy

# create desktop and follow focus - uses jq for parsing json (brew install jq)
shift + ctrl - n : yabai -m space --create && \
                index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                yabai -m space --focus "${index}"

# float / unfloat
shift + ctrl - space : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# change layout
shift + ctrl - s : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" elif .type == "stack" then "float" else "bsp" end')

# toggle window native fullscreen
shift + ctrl - f : yabai -m window --toggle native-fullscreen
ctrl - f : yabai -m window --toggle zoom-fullscreen
