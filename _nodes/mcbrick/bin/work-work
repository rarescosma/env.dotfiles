#!/usr/bin/env bash

# Unlock the SSH and GPG keys in one fell swoop
SSH_KEY="${HOME}/.ssh/id_rsa"
ssh-add -l \
  | grep -q $(ssh-keygen -lf $SSH_KEY | awk '{print $2}')  \
  || ssh-add $SSH_KEY
pass show bogus.site > /dev/null

# Inter VPN routing
globalprotect-on
tunnelblick-on
sudo pfctl -d; sudo pfctl -e -f /etc/pf.conf; sudo pfctl -sn

