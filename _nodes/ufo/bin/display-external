#!/usr/bin/env bash

# wm also got a trampoline, so gobble all args
cmd="$@"; shift $#
source "${HOME}/bin/wm"

xrandr --output DP-0 --primary --mode 3440x1440 --rate 165 --pos 0x0 --rotate normal \
  --output eDP1 --off \
  --output VIRTUAL1 --off  \
  --output HDMI2 --off \
  --output HDMI1 --off \
  --output DP2 --off \
  --output eDP-1-1 --off

dpi::terminal 12
dpi::i3 8
dpi::gtk 11
dpi::idea 18 14
dpi::x 110
dpi::rofi 12

keyboard::setup
