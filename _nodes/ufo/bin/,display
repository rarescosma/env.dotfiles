#!/usr/bin/env bash

,default() {
  ,external
}

,external() {
  xrandr --output DP-0 --primary --mode 3440x1440 --pos 0x0 --rotate normal --output DP-1 --off --output HDMI-0 --off --output DP-2 --off --output DP-3 --off --output DP-4 --off --output eDP-1-1 --off --output DP-1-1 --off --output DP-1-2 --off

  ,wm dpi::terminal 11
  ,wm dpi::i3 10
  ,wm dpi::gtk 10
  ,wm dpi::idea 18 16
  ,wm dpi::x 110
  ,wm dpi::rofi 12
}

,internal() {
  xrandr --output eDP-1-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal \
    --output VIRTUAL1 --off  \
    --output DP1 --off \
    --output HDMI2 --off \
    --output HDMI1 --off \
    --output DP2 --off \
    --output DP-0 --off

  ,wm dpi::terminal 12
  ,wm dpi::i3 9
  ,wm dpi::gtk 10
  ,wm dpi::idea 16 12
  ,wm dpi::x 144
  ,wm dpi::rofi 18
}

(return 0 2>/dev/null) && sourced=1 || sourced=0

# don't dispatch if we're being sourced
if [[ "$sourced" == "0" ]]; then
  exec 2> >(tee -a /dev/stderr)
  $@
fi
